{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended" ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "eqeqeq": "error",
        "semi": ["warn", "never"],
        "quotes": ["warn", "single"],
        "no-console": ["off"],
        "no-use-before-define": "warn",
        "no-undef": ["off"],
        "no-unused-vars": ["warn", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
        "no-useless-constructor": "off",
        "new-cap": "off",
        "spaced-comment": "warn",
        "no-trailing-spaces": "off"
    }
}
